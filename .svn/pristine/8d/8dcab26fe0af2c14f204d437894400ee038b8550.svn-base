<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_gravity="center"
    android:padding="@dimen/activity_vertical_margin">


     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent">


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

         <ImageView
             android:id="@+id/iv_back"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@mipmap/jiantou"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_gravity="center"
                android:padding="@dimen/activity_vertical_margin">
                  <LinearLayout
                      android:id="@+id/ll_icon"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:layout_gravity="center">
                      <FrameLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content">
                          <com.sms.app.interphone.view.CircleImageView
                              android:id="@+id/sms_main_icon"
                              android:layout_width="100dp"
                              android:layout_height="100dp"
                              android:src="@mipmap/talin"
                              android:layout_marginRight="10dp"
                              android:layout_marginLeft="10dp"
                              android:layout_centerVertical="true"
                              android:layout_centerHorizontal="true"
                              android:layout_alignParentRight="true" />
                          <ImageView
                              android:id="@+id/iv_revise"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:src="@mipmap/xiugaisehzhi"
                              android:paddingLeft="80dp"
                              android:paddingTop="80dp"
                              android:layout_centerVertical="true"
                              android:layout_centerHorizontal="true"
                              android:layout_alignParentRight="true" />
                      </FrameLayout>
                  </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/qianhuise"
                        android:layout_marginTop="@dimen/activity_vertical_margin"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_medium">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="@dimen/bottom_button_height">
                        <ImageView
                            android:layout_width="@dimen/activity_vertical_margin"
                            android:layout_height="@dimen/activity_vertical_margin"
                            android:src="@mipmap/yonghushezhi"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentRight="true" />
                        <EditText
                            android:id="@+id/sms_main_user_name"
                            android:layout_width="200dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/jiaocha"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentRight="true"
                            android:text="@string/device"
                            android:background="@null"/>
                    </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/qianhuise"
                    android:layout_marginTop="@dimen/activity_vertical_margin"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="@dimen/bottom_button_height">
                        <ImageView
                            android:layout_width="@dimen/activity_vertical_margin"
                            android:layout_height="@dimen/activity_vertical_margin"
                            android:src="@mipmap/xingbie"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentRight="true" />
                        <EditText
                            android:id="@+id/ed_sex"
                            android:layout_width="200dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/jiaocha"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentRight="true"
                            android:text="@string/device"
                            android:background="@null"/>
                    </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/qianhuise"
                    android:layout_marginTop="@dimen/activity_vertical_margin" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="@dimen/bottom_button_height">
                        <ImageView
                            android:layout_width="@dimen/activity_vertical_margin"
                            android:layout_height="@dimen/activity_vertical_margin"
                            android:src="@mipmap/shezheyoux"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentRight="true" />
                        <EditText
                            android:id="@+id/ed_mail"
                            android:layout_width="200dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="@dimen/margin_medium"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentRight="true"
                            android:text="@string/device"
                            android:background="@null"/>
                    </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/qianhuise"
                    android:layout_marginTop="@dimen/activity_vertical_margin"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/bottom_button_height">
                    <ImageView
                        android:layout_width="@dimen/activity_vertical_margin"
                        android:layout_height="@dimen/activity_vertical_margin"
                        android:src="@mipmap/dinzhi"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentRight="true" />
                    <EditText
                        android:id="@+id/ed_site"
                        android:layout_width="200dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="@dimen/margin_medium"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentRight="true"
                        android:text="@string/device"
                        android:background="@null"/>
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/qianhuise"
                    android:layout_marginTop="@dimen/activity_vertical_margin"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/save"
                android:layout_marginTop="30dp">

            </LinearLayout>


            <LinearLayout
                android:id="@+id/sdsd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/switchaccount"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">
            </LinearLayout>
        </LinearLayout>
         </LinearLayout>
     </ScrollView>
</LinearLayout>


