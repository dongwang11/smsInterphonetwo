<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijinghui">

    <ImageView
        android:id="@+id/img_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/beijingthree"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/beijinghui"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/multi_person_travel"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/tool_bar_height"
                android:textSize="@dimen/title_text_size"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/beijingwenzi"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_margin="@dimen/text_top_padding" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/btn_welcome_experience"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="立即体验"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/boxicon_mapswitch"
        android:paddingBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


    <LinearLayout
        android:id="@+id/ll_btn_welcome_experience"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/text_enter"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_top_padding"
            android:textColor="@color/white"
            android:text="Enter"/>
    </LinearLayout>


</RelativeLayout>
