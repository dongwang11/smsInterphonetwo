<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_histruy_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tracking_title_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/nitecore">

        <ImageView
            android:id="@+id/settings_image1"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/sms_return_icon1" />

        <TextView
            android:id="@+id/tracking_title_text"
            android:text="@string/chat_draglayout_text_histroy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:textColor="@color/black"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/gray">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:gravity="center"
                android:text="@string/chat_draglayout_text_histroy_list"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:padding="5dp"/>
            <LinearLayout
                android:id="@+id/delete_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/btn_delete_black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="@string/sms_map_delete_all"
                    android:textColor="@color/black"
                    android:padding="5dp"/>

            </LinearLayout>

        </RelativeLayout>

        <ListView
            android:id="@+id/histrny_group_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

        </ListView>

    </LinearLayout>

</LinearLayout>
