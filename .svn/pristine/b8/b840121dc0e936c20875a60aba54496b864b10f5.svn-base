                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/chat_draglayout_text_sharegroup"
                android:textColor="@color/black"
                android:textSize="@dimen/info_text_normal"
                android:layout_marginLeft="@dimen/margin_medium"/>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/huise" />



        <LinearLayout
            android:id="@+id/chat_draglayout_histroy"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/index_bottom"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/lishilts"/>
            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/chat_draglayout_text_histroy"
                android:textColor="@color/black"
                android:textSize="@dimen/info_text_normal"
                android:layout_marginLeft="@dimen/margin_medium"/>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/huise" />




        <LinearLayout
            android:id="@+id/chat_draglayout_leavegroup"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/index_bottom"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/tchults"/>
            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/chat_draglayout_text_leavegroup"
                android:textColor="@color/black"
                android:textSize="@dimen/info_text_normal"
                android:layout_marginLeft="@dimen/margin_medium"/>
        </LinearLayout>
