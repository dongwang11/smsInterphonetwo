<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/denglubeijing"
    android:padding="@dimen/menu_text_size"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/jiaocha"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/margin_medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/denglubeijing"

        android:orientation="vertical"
        android:gravity="center">

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"

                 android:text="Log in"
                 android:textColor="@android:color/white"
                 android:textSize="@dimen/text_top_padding"
                 android:gravity="center"/>
             <TextView
                 android:id="@+id/chat_login_forgot_password"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:text="Forget Passwordï¼Ÿ"
                 android:textColor="@android:color/darker_gray"
                 android:textSize="16dp"
                 android:gravity="center"/>
         </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chat_login_edtext_layout_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/youxiang"
                    android:layout_marginLeft="30dp"
                    android:layout_centerHorizontal="true" />

                <EditText
                    android:id="@+id/chat_login_edtext_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:text="501"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:hint="@string/chat_register_edtext_email_hint"
                    android:textColorHint="@color/chat_login_edtext_hint"
                    android:imeOptions="actionDone"
                    android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM_-@."
                    android:maxLength="64"
                    android:inputType="textEmailAddress"
                    android:layout_marginRight="30dp"
                    android:textSize="15sp" >
                </EditText>
            </LinearLayout>


        </RelativeLayout>
        <View
            android:id="@+id/chat_login_ed_view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/chat_login_edtext_layout_name"
            android:background="@color/white" />


        <RelativeLayout
            android:id="@+id/relativeto"
            android:layout_below="@+id/chat_login_edtext_layout_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/mima"
                    android:layout_marginLeft="30dp"

                    android:layout_centerHorizontal="true" />

                <EditText
                    android:id="@+id/chat_login_edtext_passwd"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="@color/chat_login_edtext_hint"
                    android:hint="@string/chat_login_edtext_password_hint"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="25"
                    android:text="123456"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/chat_login_ewew"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/chat_login_edtext_layout_name"
            android:background="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/text_enter"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Log In"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_top_padding" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_registered"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/text_kong">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/text_top_padding"
                    android:textColor="@color/white"
                    android:text="Sign up"/>
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/text_top_padding"
            android:visibility="gone">
            <RelativeLayout
                android:id="@+id/rl_weixpyq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/text_top_padding">
                <ImageView
                    android:id="@+id/id_index_gallery_item_imaged"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/qq"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rl_weixpyq"
                android:layout_marginRight="@dimen/text_top_padding">
                <ImageView
                    android:id="@+id/id_index_gallery_item_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/weibo"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rl_qq">
                <ImageView
                    android:id="@+id/id_index_gallery_item_imagerr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/wechat_logo"/>
            </RelativeLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jinrujianjie"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_margin="@dimen/text_top_padding" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>


